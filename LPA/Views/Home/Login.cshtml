@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/shop-homepage.css" rel="stylesheet">
    <style>
        
        #message-wrap {
    padding: 15px;
    text-align: center;
    display: none;
    border-radius: 4px;
}

    #message-wrap.success-msg {
        color: green;
        background: #e3ffd5;
    }

    #message-wrap.error-msg {
        color: red;
        background: #ffd5d5;
    }

    #message-wrap.information-msg {
        color: #000000;
        background: #ffd800;
    }

    </style>
</head>
<body>
    <div class="card">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Iniciar Sesión</h4>
            <hr>
            <div id="message-wrap">
                <span></span>
            </div>

            <form>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input id="usuario" name="" class="form-control" placeholder="Usuario" type="text">
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input id="contrasena" class="form-control" placeholder="******" type="password">
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" id="BtnLogin" class="btn btn-primary btn-block"> Acceder  </button>
                </div> <!-- form-group// -->
            </form>
        </article>
    </div>
    <script src="~/vendor/jquery/jquery.js" type="text/javascript"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            var host = window.location.origin;
            var apiEndPointAutenticar = host + "/api/v1/Usuarios/Autenticar";
            var apiEndPointPostLogin = host + "/Home/PostLogin";

            $("#BtnLogin").click(function (event) {
                event.preventDefault();

                //Validar datos
                var nombreUsuario = $("#usuario").val();
                var contrasenaUsuario = $("#contrasena").val();

                $.ajax({
                    url: apiEndPointAutenticar,
                    type: 'POST',
                    contentType: "application/json",
                    processData: false,
                    data: JSON.stringify({ nombreUsuario, contrasenaUsuario }),
                    success: function (res) {
                    //AUTENTICA EL USUARIO
                        if (res.resultado !== undefined) {
                            if (res.resultado) {
                                var nombreUsuario = res.usuario;
                                //avisa a la web que el usuario está autenticado seteando una variable de sesión: cada inicio 
                                // de sesión, se guarda en la sesión. Esto te lo redirije a HomeController y 
                                $.ajax({
                                    url: apiEndPointPostLogin,
                                    type: 'POST',
                                    contentType: "application/json",
                                    processData: false,
                                    data: JSON.stringify({ nombreUsuario }),
                                    success: function (res12) {
                                        // si esta autenticaso se crea un link 
                                        var link = document.createElement("a");
                                        // se setea la url del link a la url base de la web 
                                        link.href = window.location.origin;
                                        document.body.appendChild(link);
                                        //este link te envía al home 
                                        link.click();                                    
                                    },
                                    error: function (e) {
                                        showHideMsg("No se pudo iniciar sesion", "error");
                                        console.log(e.responseJSON);
                                    }
                                });
                            }
                            else {
                                showHideMsg("No se pudo iniciar sesion", "error");
                            }
                        } else {
                            showHideMsg("No se pudo iniciar sesion", "error");
                        }
                    },
                    error: function (e) {
                        debugger
                        showHideMsg("No se pudo iniciar sesion","error");
                        console.log(e.responseJSON);
                    }
                });
            });

            function showHideMsg(message, type, time) {
                if (type === "success") {
                    $("#message-wrap").addClass("success-msg").removeClass("information-msg").removeClass("error-msg");
                } else if (type === "error") {
                    $("#message-wrap").removeClass("success-msg").removeClass("information-msg").addClass("error-msg");
                }
                else if (type === "information") {
                    $("#message-wrap").removeClass("success-msg").removeClass("error-msg").addClass("information-msg");
                }
                if (time === undefined) time = 1500;
                $("#message-wrap").stop()
                    .slideDown()
                    .html(message)
                    .delay(time)
                    .slideUp();
            }


        })

    </script>

</body>
</html>
